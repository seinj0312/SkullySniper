{
  "name": "forge-template",
  "author": "DeGatchi",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/DeGatchi/forge-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/DeGatchi/forge-template/issues"
  },
  "scripts": {
    "prettier": "prettier --write 'src/**/*.sol'",
    "prettier:list": "prettier --list-different 'src/**/*.sol'",
    "prettier:check": "prettier --check 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'",
    "lint": "npm run prettier && npm run solhint",
    "lint:check": "npm run prettier:check && npm run solhint:check",
    "flat:exampleContract": "forge flatten src/exampleContract.sol > src/flats/exampleContract.sol"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6"
  },
  "dependencies": {
    "dependencies": "^0.0.1",
    "development": "^0.0.6"
  }
}
